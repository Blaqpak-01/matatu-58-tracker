package com.matatu.tracker58.models;

public class User {
    private String username;
    private String password;
    private String userType;
    private String phone;
    private boolean isSubscribed;

    public User() {}

    public User(String username, String password, String userType, String phone) {
        this.username = username;
        this.password = password;
        this.userType = userType;
        this.phone = phone;
        this.isSubscribed = false;
    }

    // Getters and setters
    public String getUsername() { return username; }
    public void setUsername(String username) { this.username = username; }
    public String getPassword() { return password; }
    public void setPassword(String password) { this.password = password; }
    public String getUserType() { return userType; }
    public void setUserType(String userType) { this.userType = userType; }
    public String getPhone() { return phone; }
    public void setPhone(String phone) { this.phone = phone; }
    public boolean isSubscribed() { return isSubscribed; }
    public void setSubscribed(boolean subscribed) { isSubscribed = subscribed; }
}
